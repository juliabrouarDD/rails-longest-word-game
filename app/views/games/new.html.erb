<h1>New game</h1>
<% @letters.each do |letter| %>
<p id="letter"><%= letter %></p>
<% end  %>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input name="grid" type="hidden" value=<%= @letters.join("") %> >
  <p>What is the longest word you can find?</p>
  <input type="text" name="word" placeholder="Submit a word">
  <input type="submit">
</form>
